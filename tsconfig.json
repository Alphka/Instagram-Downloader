{
	"compilerOptions": {
		"module": "NodeNext",
		"target": "ESNext",
		"moduleResolution": "NodeNext",
		"allowJs": true,
		"checkJs": true,
		"strict": true,
		"noImplicitAny": false,
		"strictNullChecks": false,
		"strictPropertyInitialization": false,
		"resolveJsonModule": true,
		"skipLibCheck": false,
		"incremental": true,
		"lib": ["ESNext"],
		"noEmit": true
	},
	"include": [
		"**/*.js",
		"**/*.ts",
		"tests/*.test.js"
	],
	"exclude": [
		"node_modules",
		"output"
	],
	"typeAcquisition": {
		"enable": true
	}
}
